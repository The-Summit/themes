<header class="container">
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="collapser">
		<div class="navbar-header">
			{% if site.id == 0 or site.id == 1%}
				<a class="navbar-brand logo" href="{{ bloginfo('url') }}/">
					<img class="img-responsive" src="{{ function("header_image") }}" alt="The Summit">
				</a>
			{% else %}
				<a class="navbar-brand logo visible-md visible-lg" href="http://thesummitfw.com">
					<img class="img-responsive" src="http://thesummitfw.com/wp-content/themes/summit/images/avatar-transparent.png" alt="The Summit">
				</a>
				<a class="navbar-brand logo" href="{{ bloginfo('url') }}">
					<img class="img-responsive" src="{{ function("header_image") }}" alt="{{function("wp_title","")}}">
				</a>				
			{% endif %}
		</div>
		<div class="visible-xs visible-sm">
			<button type="button" class="navbar-toggle btn btn-primary btn-xs" data-toggle="collapse" data-target="#collapser">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		<ul class="nav navbar-nav navbar-right">
		{% for item in menu.items %}
			<li id="menu-item-{{item.ID}}" class="{% if item.get_children %} dropdown {% endif %} menu-item menu-item-type-{{item.type}} menu-item-object-{{item.object}} menu-item-{{item.ID}}">
				{% if item.get_children %}
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">{{item.title}}<b class="caret"></b></a>
					<ul class="dropdown-menu">
						{% for child in item.get_children %}
						<li class="sub-navigation-item">
							<a href="{{child.get_path}}">
								{% if child.attr_title %}<h5>{% endif %}
									{{child.title}}
								{% if child.attr_title %}<br/><small>{{child.attr_title}}</small></h5>{% endif %}
							</a>
						</li>
						{% endfor %}
					</ul>
				{% else %}
					<a href="{{item.link}}">{{item.title}}</a>
				{% endif %}
			</li>
		{% endfor %}
			<li class="menu-item menu-item-type-contact dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-comment"></span></a>
				<ul class="dropdown-menu">
					<li><a href="tel:260.446.3200"><span class="glyphicon glyphicon-earphone"></span>260.446.3200</a></li>
					<li><a target="_blank" href="http://map.thesummitfw.com"><span class="glyphicon glyphicon-road"></span>1025 W. Rudisill</a></li>
					<li><a href="/contact-us"><span class="glyphicon glyphicon-envelope"></span>Send a Message</a></li>
					<li class="divider"></li>
					<li class="social-buttons">
						{% include ["social.twig"] %}
					</li>
				</ul>
			</li>
		</ul>
	</nav>
</header>